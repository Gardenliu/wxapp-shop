@import "../../assets/style/theme.wxss";
.container{
    min-height: 100vh;
    background-color: #efefef;
    padding:0 0 16vw 0;
    margin:0;
    box-sizing: border-box;
    font-size: 14px;
    font-family: "微软雅黑";
}
/*下单产品*/
.container .products{
    background-color: #fff;
    padding:0 33.34rpx;
}
.container .products .orderinfo{
    padding:28rpx 0;
    display: flex;
}
.container .products .orderinfo .number{
    font-weight: 600;
    flex: 1;
}
.container .products .ordertype{
    padding:25rpx 0;
    border-top:1rpx solid #e5e5e5;
    font-weight: 300;
    font-size: .9em;
}
.container .products .product{
    display: flex;
    border-top:1rpx solid #e5e5e5;
    padding:38rpx 0;
}
.container .products .product .thumb{
    width:121.5rpx;
    height:132rpx;
}
.container .products .product .info{
    flex: 1;
    display: flex;
    padding-left:20rpx;
    flex-direction: column;
    justify-content: space-between;
}
.container .products .product .info  .productName{
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: no-wrap;
    font-weight: 600;
    /*font-size: 1.1em;*/
}
.container .products .product .price{
    text-align: right;
    position: relative;
    font-weight: 600;
    /*display: flex;
    height:100%;*/
}
.container .products .product .price .num{
    position: absolute;
    width:100%;
    bottom:0;
}
/*收货信息*/
.container .receiveInfo{
    background-color: #fff;
    margin-top:21rpx;
    padding:0 33.34rpx;
}
.container .receiveInfo .title{
    padding:28rpx 0;
    font-size:15px;
    font-weight: 600;
}
.container .receiveInfo .info{
    padding:25rpx 0;
    border-top:1rpx solid #e5e5e5;
    /*color:#8d8d8d;
    font-weight: 300;*/
    font-size: .9em;
}
/*支付信息，其他信息*/
.container .payInfo{
     background-color: #fff;
    margin-top:21rpx;
    padding:0 33.34rpx;
}
.container .payInfo .title{
    padding:28rpx 0;
    font-size:15px;
    font-weight: 600;
}
.container .payInfo .info{
    padding-bottom:25rpx;
    border-top:1rpx solid #e5e5e5;
    /*color:#8d8d8d;*/
    /*font-weight: 300;*/
    font-size: .9em;
}
.container .payInfo .info .payitem{
    display: flex;    
    padding-top:25rpx;
}
.container .payInfo .info .payitem .flex{
    flex: 1;
    text-align: right;
}
/*结算*/
.container .footer{
    background-color: white;
    position: fixed;
    bottom:0;
    width:100vw;
    display: flex;
}
.container .footer .kefu,
.container .footer .btn,
.container .footer .total,
.container .footer .checkout{
    font-size: 4vw;
    height: 14vw;
}
.container .footer .kefu{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:center;
    position: relative;
}
.container .footer .kefu .wxapp{
    width:100%;height:100%;
    position: absolute;
    top:0;left:0;
    opacity:0;
    display: inline-block;text-align: center;line-height:1;
font-size: 1em;color: #333;
}
.container .footer .kefu .img{
    width:50rpx;
    height:50rpx;
}
.container .footer .btn{
    flex:1;
    color:white;
    font-weight: 600;
    font-size: 1.2em;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}
.container .footer .logistics{
    background-color:#69aded;  
}
.container .footer .receive{
    background-color: #ed6969;
}

.container .footer .total{
    flex:1;
    justify-content: flex-end;
    display: flex;
    align-items: center;
    padding:0 17.36rpx 0 33.333rpx;
    font-size: 1.1em;
    font-weight: 600;
    color:#ed6969;
}
.container .footer .checkout{
    width:36.5vw;
    font-size: 16px;
    font-weight: 600;
    line-height: 20vw;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center
}
/* baseinfo.wxss */
.container{
    min-height: 100vh;
    background-color: #efefef;
    padding:0 0 22vw 0;
    margin:0;
    box-sizing: border-box;
    font-size: 14px;
    font-family: "微软雅黑";
}
.container .content{
    background-color: #fff;
}
.container .content .bar{
    display: block;
    width:100%;
    height:10rpx;
}
.container .content .flex{
    display: flex;
    padding:33.34rpx;
    border-top: 1px solid #e5e5e5;
}
.container .content .flex .delete{
    padding:0 10rpx;
    display: flex;
    align-items: center;
   
}
.container .content .flex .delete .img{
 width:35rpx;
    height:45rpx;
}
.container .content .flex .key{
    width:25%;
    display: flex;
    align-items: center;
    font-weight: 600;
    font-size: 1.1em;
}
.container .content .flex .value{
    flex: 1;
    font-weight: 500;
    display: flex;
    justify-content: space-between;
}
/*确认*/
.container .footer{
    background-color: white;
    position: fixed;
    /*z-index: 9999;*/
    bottom:0;
    width:100vw;
    display: flex;
    flex-direction: row-reverse;
}
.container .footer .checkout{
    width:100vw;
    font-size: 16px;
    font-weight: 600;
    line-height:111.11rpx;
    text-align: center;
}

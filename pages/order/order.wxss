@import "../../assets/style/theme.wxss";
.container{
    min-height: 100vh;
    background-color: #efefef;
    font-size: 14px;
}
.container .bar{
    display: flex;
    background-color: #fff;
    justify-content: center;
    /*padding:0 33.34rpx;*/
    font-weight: 600;
}
.container .bar .flex-item{
    display: block;
    text-align: center;
    padding:25rpx 3vw;
}
.container .bar .flex-item .hidden{
    position: absolute;
    left:999em;
}

/*订单列表*/
.container .order-item{
    box-sizing: border-box;
    margin-top:20rpx;
    background-color: #fff;
}
.container .order-item .orderinfo{
    padding:28rpx 33.34rpx;
}
.container .order-item .orderinfo .number{
    font-weight: 300;
    color:#8d8d8d;
}


.container .order-item .ordercontrol{
    padding:25rpx 33.34rpx;
    position: relative;
    /*border-top:1rpx solid #e5e5e5;*/
}
.container .order-item .ordercontrol .count{
    display: flex;
    justify-content: space-between;
    font-weight: 600;
}
.container .order-item .ordercontrol .btns{
    display: flex;
    justify-content: flex-end;
}
.container .order-item .ordercontrol .btns .btn{
    margin-top:20rpx;
}
.container .order-item .ordercontrol .cancel,
.container .order-item .ordercontrol .wuliu,
.container .order-item .ordercontrol .pay{
    font-size: 28rpx;
    line-height: 1;
    padding:18rpx 20rpx;
    margin:20rpx 0 0 20rpx;
}
.container .order-item .ordercontrol .wuliu{
    color:#69aded;
    border-color:#69aded;
}
.container .order-item .ordercontrol .pay{
    color:#ed6969;
    border-color:#ed6969;
}

.container .order-item .product{
    display: flex;
    /*border-top:1rpx solid #e5e5e5;*/
    padding:38rpx 33.34rpx;
    position: relative;
}
.container .order-item .product .thumb{
    width:121.5rpx;
    height:132rpx;
}
.container .order-item .product .info{
    flex: 1;
    display: flex;
    padding-left:20rpx;
    flex-direction: column;
    justify-content: space-between;
}
.container .order-item .product .info  .productName{
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: no-wrap;
    font-weight: 600;
    /*font-size: 1.1em;*/
}
.container .order-item .product .info .type{
    color:#9e9e9e;
}
.container .order-item .product .price{
    text-align: right;
    position: relative;
    font-weight: 600;
    /*display: flex;
    height:100%;*/
}
.container .order-item .product .price .num{
    position: absolute;
    width:100%;
    bottom:0;
}

.container .order-item .top-line:before{
    content: '';
    position: absolute;
    top:0;
    left:33.34rpx;
    right:33.34rpx;
    height:1px;
    background-color: #e5e5e5;

}
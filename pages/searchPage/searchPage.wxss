/* searchPage.wxss */
.search{
    padding:2.8vw 3.6vw;
    background-color: #fff;
    box-sizing: border-box;
}
.search .searchbar{
    width:100%;
    height:9vw;
    background-color: #f4f4f4;
    border:1px solid #efefef;
    border-radius: 3.75vw;
    font-size: 3.6vw;
    padding:5rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.search .searchbar .input{
    flex:1;
}
.search .searchbar .input.focus{
    font-size: 1.1em;
    padding-left:2rpx;
    padding-bottom:3rpx;
}

.history{
    height:calc(100vh - 13.8vw);
    border-top:1px solid #efefef;
    overflow: hidden;
    background-color: #fff;
    box-sizing: border-box;
    padding:4vw 3.6vw 0;
    font-size: 4vw;
}
.history .title{
    
    display: flex;
    justify-content: space-between;
}
.history .title .clear{
    font-size: .9em;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}
.history .items{
    display: flex;
    margin-top:20rpx;
    font-size: .9em;
    flex-wrap: wrap;
}
.history .items .item{
    padding:6rpx 30rpx;
    background-color: #f4f4f4;
    margin-right:20rpx;
    margin-bottom:20rpx;
    border-radius: 10rpx;
}
.search{
    padding:2.8vw 3.6vw;
    background-color: #fff;
    box-sizing: border-box;
}
.search .searchbar{
    width:100%;
    height:9vw;
    background-color: #f4f4f4;
    border:1px solid #efefef;
    border-radius: 3.75vw;
    font-size: 3.6vw;
    color:#a7a7a7;
    padding:5rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}


.category{
    display:flex;
    height:calc(100vh - 6vw - 9vw);
    overflow:hidden;
    font-size:3vw;
    border-top:1px solid #efefef;
}
.category .category-top-level{
    width:20vw;
    height:calc(100vh - 6vw - 9vw);
    background-color: #e4e4e4;
}
.category .category-top-level .level-1{
    height:14vw;
    display:flex;
    align-items:center;
    padding-left:5vw;
}
.category .category-top-level .level-1.active{
    background-color:#fff;
}
.category .category-top-level .level-1 .hidden{
    position: absolute;
    left:-9999em;
}
.category .category-sub-level{
    width:80vw;
    height:calc(100vh - 6vw - 9vw);
    background-color:#fff;   
    padding:3vw 4vw;
    box-sizing:border-box;
}
.category .category-sub-level .layout{
    width:100%;
     display:flex;
    flex-wrap:wrap;
}
.category .category-sub-level .level-2{
    width:22%;
    margin-right:4%;
    margin-bottom:3vw;
    display:flex;
    flex-direction:column;
    align-items:center;
}
.category .category-sub-level .level-2 .img{
    width:100%;
    height:20vw;
    margin-bottom:15rpx;
}
.category .category-sub-level .level-2:nth-child(4n){
    margin-right:0;
}
.category .category-sub-level .level-2 .text{
    width:100%;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
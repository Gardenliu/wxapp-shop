@import "../../assets/style/theme.wxss";
.container{
    min-height: 100vh;
    background: #fff;
    padding:0 0 40rpx 0;
    margin:0;
    box-sizing: border-box;
    font-size: 14px;
    font-family: "微软雅黑";
}
.infor{
    height: 280.8rpx;
    background: #fff;
    padding: 0 34.7rpx;


}
.inforFrist{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #efefef;
}
.inforSecond{
    box-sizing: border-box;
    display: flex;
    padding: 34.7rpx 0;
    align-items: center;
}
.ordImg{
    width: 132.2rpx;
    height: 90.6rpx;
}
.threeTxt{
    height: 140rpx;
    font-size: 12px;
    font-weight: bold;
    margin-left: 34.7rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.information{
    padding: 0 34.7rpx;

.info-time{
    padding: 0 34.7rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 4.5vw;
}
.info-time-frist{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.info-clock{
    padding-top:10rpx;
